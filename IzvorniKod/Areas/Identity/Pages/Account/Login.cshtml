@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container" style="display: flex; justify-content: center; align-items: center;">

    <div class="card" style="max-width: 450px; margin: auto; padding: 20px; border-radius: 40px; box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);">
        
        
        <div class="card-body">
            <div class="card-title" style="display: flex; align-items: center; justify-content: center">
                <img src="~/images/Ducki_1.png" class="w-25" alt="DuckI">
                <h1 class="text-primary">DuckI</h1>
            </div>
            <h3 class="card-subtitle text-center text-primary" style="padding: 20px">Log in to DuckI</h3>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" style="background: #CCD5FF;" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <label asp-for="Input.Email" class="form-label" style="color: #6176e8;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" style="background: #CCD5FF;" autocomplete="current-password" aria-required="true" placeholder="password"/>
                    <label asp-for="Input.Password" class="form-label" style="color: #6176e8;">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label" style="color: #0d6efd;">
                        <input class="form-check-input m-1" asp-for="Input.RememberMe"/>
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="text-center mb-3">
                    <button id="login-submit" type="submit" class="w-50 btn btn-sm btn-primary rounded-3" style="font-size: medium">Continue</button>
                </div>

                <div class="text-center">
                    <p class="mb-2">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>


            <section class="text-center">
                <div style="display: flex; align-items: center; text-align: center; margin-bottom: 10px">
                    <div style="flex-grow: 1;height: 0.15rem;background-color: #0d6efd"></div>
                    <div style="margin: 0 15px" class="text-primary">OR</div>
                    <div style="flex-grow: 1;height: 0.15rem;background-color: #0d6efd"></div>
                </div>
                
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See this
                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                    about setting up this ASP.NET application to support logging in via external services</a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div class="d-grid gap-2 col-10 mx-auto">
                                
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                            @if(provider.DisplayName.Equals("Google"))
                                            {
                                                <button type="submit" name="provider" class="btn btn-light" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="border-color: #212529; display: flex;">
                                                    <img src="~/images/googlelogo.png" style="width: 25px; margin-right: 5px;">Continue with @provider.DisplayName
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" name="provider" class="btn btn-light" value="@provider.Name" title="Log in using your @provider.DisplayName account" style="border-color: #212529; display: flex;">
                                                    <img src="~/images/microsoftlogo.png" style="width: 25px; margin-right: 5px;">Continue with @provider.DisplayName
                                                </button>
                                            }
                                    }
                                
                            </div>
                        </form>
                    }
                }
            </section>

        </div>
    </div>



</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
