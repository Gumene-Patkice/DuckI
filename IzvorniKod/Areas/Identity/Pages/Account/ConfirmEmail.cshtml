@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<h1>@ViewData["Title"]</h1>
<partial name="_StatusMessage" model="Model.StatusMessage" />

@if (ViewData["Redirect"] != null && (bool)ViewData["Redirect"])
{
<script>
    setTimeout(function() {
        window.location.href = '/';
    }, 3000);
</script>
}
