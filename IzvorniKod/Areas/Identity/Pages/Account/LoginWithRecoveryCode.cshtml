@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<link rel="stylesheet" href="/css/login.css" asp-append-version="true">

<div class="container card-container">

    <div class="card card-design">


        <div class="card-body">
            <div class="card-title card-container">
                <img src="~/images/Ducki_1.png" class="w-25" alt="DuckI">
                <h1 class="text-primary fw-bold">DuckI</h1>
            </div>
            <h4 class="card-subtitle text-center text-primary">@ViewData["Title"]</h4>

            <p class="text-center">
                You have requested to log in with a recovery code. This login will not be remembered until you provide
                an authenticator app code at log in or disable 2FA and log in again.
            </p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.RecoveryCode" class="form-control form-bg-color" autocomplete="off" placeholder="RecoveryCode" />
                    <label asp-for="Input.RecoveryCode" class="form-label form-text-color"></label>
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <button type="submit" class="w-50 btn btn-sm btn-primary rounded-3 button-text-size">Log in</button>
                </div>
                
            </form>
            
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}